@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Book Library</h1>
    <p>Explore our collection of books and libraries.</p>
    <p>Load a new DLL to change the data source.</p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="ChangeDll" method="post">
        <div class="form-group">
            <label for="dllPath">DLL Path:</label>
            <input type="text" class="form-control" id="dllPath" name="dllPath" placeholder="Enter DLL file path">
        </div>
        <button type="submit" class="btn btn-primary">Load DLL</button>
    </form>
</div>
